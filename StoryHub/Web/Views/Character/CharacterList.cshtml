@using Web.Data
@using Web.Data.Characters
@using Web.Enumerations
@using Web.Miscellaneous
@using X.PagedList.Mvc.Core

@model X.PagedList.IPagedList<CharacterData>

@{
    ViewData["Title"] = "Characters";
}

<script type="text/javascript">

    // Ask the user to confirm the deletion
    function ComfirmDeletion(){
        return (ConfirmAction("Are you sure you want to delete the character?"))
    }

</script>

<h1>
    @ViewData["Title"]
</h1>

<hr />

<div class="row">
    <div class="col-xl-2">
        <div class="row">
            @Html.ActionLink("Create New Character", "Create", "Character", new {}, new {
            @class = "btn btn-primary"
            })
        </div>
    </div>

    <div style="width:3%;"></div>

    <div class="col">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="row-number-column">
                        Row #
                    </th>
                    <th>
                        Name
                    </th>
                    <th class="action-buttons-column">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @if ((Model != null) && (Model.Count > 0))
                {
                    int row_number = 0;

                    foreach (var character in Model)
                    {
                        row_number++;

                        <tr>
                            <td class="row-number-column">
                                @GlobalMethods.GetRowNumberForPageNumber(row_number, Model.PageNumber)
                            </td>
                            <td>
                                @character.Name
                            </td>
                            <td class="action-buttons-column">
                                <div class="row">
                                    @Html.ActionLink("Edit", "Edit", "Character",
                            new {
                            @character_id = @character.CharacterID.Value
                            },
                            new {
                            @class = "btn btn-primary"
                            })
                                </div>

                                <div class="row">
                                    @Html.ActionLink("Delete", "Delete", "Character",
                            new {
                            @character_id = @character.CharacterID.Value,
                            },
                            new {
                            @class = "btn btn-danger",
                            @onclick="return ComfirmDeletion();"
                            })
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9">
                            <label>
                                There are no characters.
                            </label>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model?.Count > 0)
        {
            <div class="row">
                <div id="div_pager" class="col-xl-6">
                    @Html.PagedListPager( Model, page_number => Url.Action("Index", new { page_number }), new X.PagedList.Web.Common.PagedListRenderOptions{
                LiElementClasses = new [] { "page-item" },
                PageClasses = new [] {"page-link"},
                })
                </div>

                <div class="col-xl-6 text-end">
                    @GlobalMethods.GetPagingText(Model?.PageNumber, Model?.PageCount)
                </div>
            </div>
        }
    </div>
</div>