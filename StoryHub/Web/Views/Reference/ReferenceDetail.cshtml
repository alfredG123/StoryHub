@using Web.Data.Stories
@using Web.Enumerations
@using Web.Miscellaneous
@using Web.Models

@model ReferenceDetailViewModel

@{
    ViewData["Title"] = "Reference Details";
}

@using (Html.BeginForm("SaveReferenceDetail", "Reference", FormMethod.Post))
{
    <h1>
        @ViewData["Title"]
    </h1>

    <hr />

    @if (Model != null)
    {
        <div class="row">
            <label class="col-xl-2 label-text">
                Title
            </label>

            <div class="col-xl-4">
                @Html.TextBoxFor(
        Model => Model.Title,
        Model.Title,
        new {
        @class="form-control",
        }
        )
            </div>
        </div>

        <br />

        <div class="row">
            <label class="col-xl-2 label-text">
                Description
            </label>

            <div class="col-xl-4">
                @Html.TextBoxFor(
        Model => Model.Description,
        Model.Description,
        new {
        @class="form-control",
        }
        )
            </div>
        </div>

        <br />

        <div class="row">
            <label class="col-xl-2 label-text">
                Related URL
            </label>

            <div class="col-xl-4">
                @Html.TextBoxFor(
        Model => Model.RelatedURL,
        Model.RelatedURL,
        new {
        @class="form-control",
        }
        )
            </div>
        </div>

        <br />

        @Html.HiddenFor(
        Model => Model.ReferenceID,
        Model.ReferenceID
    )
    }

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">
                Save
            </button>

            @Html.ActionLink(
        "Back", "Index", "Reference",
        new {},
        new {
        @class = "btn btn-secondary",
        })
        </div>
    </div>
}