@using Web.Data.Stories
@using Web.Models

@model StoryDetailViewModel

@{
    ViewData["Title"] = "Story Content Menu";
}

<h1>
    @Model?.Title
</h1>

<hr />

<div style="align-content:center;">
    <div class="row">
        @Html.ActionLink("Characters", "Index", "Character",
        new {
        @story_id=Model?.StoryID,
        },
        new {
        @class = "btn btn-primary"
        })
    </div>

    <div class="row">
        @Html.ActionLink("Regions", "Index", "Region",
        new {
        @story_id=Model?.StoryID,
        },
        new {
        @class = "btn btn-primary"
        })
    </div>

    <div class="row">
        @Html.ActionLink("Plots", "Index", "Plot",
        new {
        @story_id=Model?.StoryID,
        },
        new {
        @class = "btn btn-primary"
        })
    </div>

    <div class="row">
        @Html.ActionLink("Custom Fields", "Index", "CustomField",
        new {
        @story_id=Model?.StoryID,
        },
        new {
        @class = "btn btn-primary"
        })
    </div>

    <div class="row">
        @Html.ActionLink("References", "Index", "Reference",
        new {
        @story_id=Model?.StoryID,
        },
        new {
        @class = "btn btn-primary"
        })
    </div>

    <div class="row">
        @Html.ActionLink(
        "Back", "Index", "Story",
        new {},
        new {
        @class = "btn btn-secondary",
        })
    </div>
</div>