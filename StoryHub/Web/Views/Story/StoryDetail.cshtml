@using Web.Data.Stories
@using Web.Enumerations
@using Web.Miscellaneous
@using Web.Models

@model StoryDetailViewModel

@{
    ViewData["Title"] = "Story Details";
}

@using (Html.BeginForm("SaveStoryDetail", "Story", FormMethod.Post))
{
    <h1>
        @ViewData["Title"]
    </h1>

    <hr />

    @if (Model != null)
    {
        <div class="row">
            <label class="col-xl-2 label-text">
                Title
            </label>

            <div class="col-xl-4">
                @Html.TextBoxFor(
        Model => Model.Title,
        Model.Title,
        new {
        @class="form-control",
        }
        )
            </div>
        </div>

        <br />

        <div class="row">
            <label class="col-xl-2 label-text">
                Introduction
            </label>

            <div class="col-xl-4">
                @Html.TextBoxFor(
        Model => Model.Introduction,
        Model.Introduction,
        new {
        @class="form-control",
        }
        )
            </div>
        </div>

        <br />

        @Html.HiddenFor(
        Model => Model.StoryID,
        Model.StoryID
    )
    }

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">
                Save
            </button>

            @Html.ActionLink(
        "Back", "Index", "Story",
        new {},
        new {
        @class = "btn btn-secondary",
        })
        </div>
    </div>
}